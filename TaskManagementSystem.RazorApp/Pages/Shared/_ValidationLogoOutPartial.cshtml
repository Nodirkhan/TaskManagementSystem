@{
    if(User.Identity.IsAuthenticated)
    {
        
        <form method="post" class="form-inline" asp-page="/Login/LogOut">
            Welcome @User.Identity.Name
            <button type="submit" class="btn btn-link"><i class="bi bi-box-arrow-right"></i></button>
        </form>
    }
    else
    {
        <a class="nav-link text-dark" asp-page="/Login/Authorization" >SignIn</a>
    }
}