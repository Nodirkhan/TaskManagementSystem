@page
@model TaskManagementSystem.RazorApp.Pages.TaskItems.SingleTaskModel
@{
}
<div class="card text-center">
  <div class="card-header alert alert-success" style="font-weight:700; font-size:20px">
    @Model.Status.Name
  </div>
  <div class="card-body d-flex flex-column align-content-center">
    <h3 class="card-title">Task Name : <span class="text-success">@Model.TaskItemDTO.Name</span></h3>
    <h3>Created Date: <span class="text-warning">@Model.TaskItemDTO.CreatedDate.ToString("MMMM dd,yyyy")</span></h3>
    <h3>Assign To : <span class="text-info">@Model.User.FirstName</span></h3>
    <p class="card-text text-secondary" style="font-size:25px;">Description : @Model.TaskItemDTO.Description</p>
    <div class="col-md-4 d-flex justify-content-around" style="margin:auto;">
         <a asp-page="ListTaskItem"  asp-route-id="@Model.TaskItemDTO.ProjectId" class="btn btn-danger">Back To List</a>
         <a asp-page="Edit" asp-route-id="@Model.TaskItemDTO.Id" class="btn btn-info">
             <i class="bi bi-pencil-square mr-1"></i>
         </a>
         <a asp-page="Delete" asp-route-id="@Model.TaskItemDTO.Id" class="btn btn-danger">
             <i class="bi bi-trash"></i>
         </a>
    </div>
  </div>
  <div class="card-footer font-weight-bold text-muted">End Date 
      <span class=" font-weight-bold text-danger">@Model.TaskItemDTO.EndDate.ToString("MMMM dd,yyyy")</span>
  </div>
</div>