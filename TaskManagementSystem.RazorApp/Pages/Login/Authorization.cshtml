@page
@model TaskManagementSystem.RazorApp.Pages.Login.AuthorizationModel
@{
    ViewData["Title"] = "Login";
}
             

      <div class="col-6 mt-5" style="margin:auto;">
       <h2 class="text-secondary"  style="margin:auto;">Login</h2>
        <form  method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-auto">
                <label asp-for="LoginModel.UserName"></label>
                </div>
                <div class="col-12">
                <input asp-for="LoginModel.UserName" class="form-control" style="width:100%;"/>
                </div>
                <span class="text-danger" asp-validation-for="LoginModel.UserName"></span>
            </div>
            <div class="form-group row">
                <div class="col-auto">
                <label asp-for="LoginModel.Password"></label>
                </div>
                <div class="col-12">
                <input asp-for="LoginModel.Password" class="form-control"  style="width:100%;"/>
                </div>
                <span class="text-danger" asp-validation-for="LoginModel.Password"></span>
            </div>
            <div class="col-6 mt-2">
                <button type="submit" class="btn btn-primary" style="width:250px;">SignIn</button>
            </div>
        </form>

        </div>
        <div class="row col-6 flex-column " style="margin:auto;">
              
              <div class="d-flex justify-content-between mt-3">
                  <div class="alert alert-info ">
                      <p>Login for Admin :</p>
                      <p>Username : admin</p>
                      <p>Password : admin</p>
                 </div>
                  <div class="alert alert-info">
                      <p>Login for User :</p>
                      <p>Username : user</p>
                      <p>Password : user</p>
                 </div>
              </div>
         </div>
