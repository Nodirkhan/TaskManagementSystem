@page
@model TaskManagementSystem.RazorApp.Pages.Project.AddProjectModel
@{
    ViewBag.Title = "Projects";

}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
  <div class="row mb-3">
    <label asp-for="ProjectModel.Name" class="col-sm-12 col-form-label"></label>
    <div class="col-sm-10">
      <input asp-for="ProjectModel.Name" class="form-control" placeholder="Project Name" >
    </div>
    <div class="col-sm-10">
     <span  asp-validation-for="ProjectModel.Name" class="text-danger"></span>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
  <a class="btn btn-primary" asp-page="ListProject">Back to list</a>
</form>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}