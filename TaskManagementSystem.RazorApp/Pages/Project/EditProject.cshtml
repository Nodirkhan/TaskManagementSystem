@page "{Id}"
@model TaskManagementSystem.RazorApp.Pages.Project.EditProjectModel
@{
    ViewBag.Title = "Projects";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
             <div class="row mb-3">
                <label asp-for="ProjectDTO.Name" class="col-sm-12 col-form-label" ></label>
                <div class="col-sm-10">
                   <input asp-for="ProjectDTO.Name" class="form-control"  value="@Model.ProjectDTO.Name" >
                </div>
                <div class="col-sm-10">
                   <span  asp-validation-for="ProjectDTO.Name" class="text-danger"></span>
                </div>
             </div>
             <div class="row mb-3">
                <label asp-for="ProjectDTO.EndDate" class="col-sm-12 col-form-label" ></label>
                <div class="col-sm-10">
                   <input asp-for="ProjectDTO.EndDate" class="form-control"  value="@Model.ProjectDTO.EndDate" >
                </div>
                <div class="col-sm-10">
                   <span  asp-validation-for="ProjectDTO.EndDate" class="text-danger"></span>
                </div>
             </div>
             <button type="submit" class="btn btn-primary">Update</button>
         <a class="btn btn-primary" asp-page="ListProject">Back to list</a>
        </form>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}