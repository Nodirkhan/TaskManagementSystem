@page
@model TaskManagementSystem.RazorApp.Pages.NewFolder.ListStatusModel
@{
}

<div class="row">
     <div class="col-12 d-flex justify-content-between">
       <div class="col-md-6">
           <h2>Statuses <span class="btn btn-success">@Model.Statuses.Count</span></h2>
       </div>
       <div class="col-md-3">
           <a asp-page="Create" class="btn btn-primary">Create Status</a>
       </div>
    </div>
    </div>
    <div class="row justify-content between">
    @foreach(var status in Model.Statuses)
    {
       <div class="col-md-4 mb-3">
                   <div class="card bg-warning border-danger" style="width: 18rem;">
            <div class="card-body d-flex flex-column align-items-center">
            <h5 class="card-title text-danger">@status.Name</h5>
                 <div class="d-flex " style="margin-bottom:5px" >
                 <a asp-page="Edit" asp-route-id="@status.Id" class="btn btn-primary" style="margin-right:10px">Edit</a>
                 <a asp-page="Delete" asp-route-id="@status.Id" class="btn btn-danger">Delete</a>
                 </div>
                 <a asp-page="/Project/ListProject" class="btn btn-primary">Back to Project</a>
  </div>
</div>
       </div>
    }
</div>